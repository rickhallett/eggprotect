generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model OTPCode {
  id        String   @id @default(cuid())
  code      String
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model StarState {
  id          String   @id @default(cuid())
  activeStars Int      @default(9)
  updatedAt   DateTime @updatedAt
}
